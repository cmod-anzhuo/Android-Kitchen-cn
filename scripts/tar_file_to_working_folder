#
# This script has two arguments:
#
# $1 = file name (mandatory)
# $2 = "kernel_only" or "name_given" (optional)
#


update_file=$1
 
echo "选择 $update_file"

# Trim spaces in file name
update_file2=`echo $update_file | tr ' ' '_'`

if [ "$update_file" != "$update_file2" ]
then
  echo "重命名为 $update_file2"
  mv "original_update/$update_file" original_update/$update_file2
  update_file=$update_file2
fi

#
# Working folder name
#
build_dir=`scripts/set_working_folder_name $2` 


#
# Creating folder structure
#

echo
echo "创建工作目录 $build_dir ..."
mkdir $build_dir

echo
echo "提取 ROM ..."

tar xvf original_update/$update_file -C $build_dir -x factoryfs.img cache.img modem.bin zImage

if [ "$?" != "0" ]
then
  echo
  echo "错误: 无法提取 ROM!"
  cd ..
  exit 1
fi

cd $build_dir


echo

if [ -e factoryfs.img ]
then

  if [ -e zImage ]
  then
    cd ..
    scripts/show_rooted_kernel_msg
    cd $build_dir
  fi

  cd ..
  scripts/simg_files_to_working_folder no_create $2
  exit $?

else
  echo "错误: 没有在TAR压缩包中发现image文件!"
  echo 
  cd ..
  exit 1
fi



if [ ! -d system ] && [ ! -d SYSTEM ]
then

  echo
  echo "错误: 没有发现system文件夹!"
  cd ..
  exit 1

fi


echo
echo "META-INF/com/google/android:列表"

cd WORKING_*
cd META-INF/com/google/android
ls -l 
cd ../../../../..



#
# Completion
#

cd $build_dir

echo
echo Listing of $build_dir:
ls -l 

echo

if [ -d system ]
then
  echo "完成工作目录设置!"
  cd ..

else
  echo "错误: 设置失败"
  cd ..
  scripts/press_enter
  exit 1
fi

cd ..

