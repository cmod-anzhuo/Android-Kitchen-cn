#
# This script has two parameters:
#
# $1 = build.prop参数 (强制)
# $2 = 工作目录名称 (可选)
#

base_dir=`pwd`

if [ "$2" == "" ]
then
  cd WORKING_*
else
  cd $2
fi

if [ ! -e system/build.prop ]
then
  value=UNKNOWN

else

  cd system

  str=^$1=
  grep_str=`grep -c $str build.prop`

  if [ $grep_str == 0 ]
  then
    value=UNKNOWN

  else  
    value=`grep -m 1 $str build.prop \
            | sed 's/'"$1"'=//g'`

    if [ "$value" == "" ]
    then
      value=UNKNOWN
    fi
  fi
fi

cd $base_dir

echo $value

